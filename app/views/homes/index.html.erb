          </div>
          <div class="options-detail">
            <p>観葉植物のお店</p>
          </div>
        <% end %>
      </div>
      <div class="top-options-box col-md-4">
      <%= link_to posts_path do %>
        <div class="icon-cover">
            <img src="/assets/camera.png/", width="200" height="200", class="top-icon">
        </div>
        <div class="options-detail">
          <p>コミュニティ</p>
        </div>
      <% end %>
      </div>
      <div class="top-options-box col-md-4">
        <%= link_to events_path do %>
        <div class="icon-cover">
          <img src="/assets/watering.png", width="200" height="200", class="top-icon">
        </div>
        <div class="options-detail">
          <p>マイプラント管理</p>
        </div>
       <% end %>
