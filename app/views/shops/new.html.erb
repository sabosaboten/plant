<div class="shopping-main">
   <div class="shopping-map">

      <%= form_for(@shop) do |f| %>
      <h4>名前</h4>
      <%= f.text_field :name, placeholder: "名前" %>
      <h4>住所</h4>
      <%= f.text_field :address, placeholder: "住所" %>
      
