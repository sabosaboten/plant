<div class="main">

  <%= form_tag(search_posts_path, :method => "get", class: "search-form") do %>
   <%= text_field_tag :keyword %>
   <%= submit_tag "submit", :name => nil %>
  <% end %>
  
  <div class="contents-box">
    <% @posts.each do |post| %>
      <%= render partial: "post", locals: { post: post } %>
    <% end %>
  </div>

</div>

<div class="main show">
  <div class="contents-box">
    <% @all_ranks.each do |post| %>
      <%= render partial: "post", locals: { post: post } %>
    <% end %> 
  </div>
</div>