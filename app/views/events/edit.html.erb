-# .event-top

-#   %h1 Editing event

-#   = render 'form'

-#   = link_to 'Show', @event
-#   \|
-#   = link_to 'Back', events_path



<div class ="container edit-original">
  <div class= "row plant-list">
    <%=@event.title%>
      <%= form_for @event do |f|%>
      <div class ="field">
        <p><%= f.date_select :date, use_month_numbers:true %></p>
      </div>
      <div class ="field">
        <p><%= f.submit '水やり完了'%></p>
        <%= link_to "削除", event_path(@event.id), method: :delete %>
      </div>
    <% end %>
  </div>
</div>