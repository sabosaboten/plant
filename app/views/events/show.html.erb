<div class ="container event-edit">
  <div class= "row event-edit-title">
    <div class="col-12 text-center">
    <%=@event.title%>
    </div>
  </div>
  <div class= "row event-edit-main mt-3">
    <div class="col-12 text-center">
      <%= form_for @event do |f|%>
      <div class ="field">
        <p><%= f.date_select :date %></p>
      </div>
      <div class ="field">
        <p><%= f.submit '日付を変更', class: "btn-outline-success"%></p>
        <%= link_to "削除", event_path(@event.id), method: :delete %>
      </div>
      <% end %>
    </div>
  </div>
</div>

